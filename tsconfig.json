{
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"types": ["jest", "node"],
		
		"allowJs": true,
		"checkJs": true,
		
		"outDir": "./dist",
		
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}